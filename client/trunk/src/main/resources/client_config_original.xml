<?xml version="1.0" encoding="utf-8"?>
<databases>
  <database>
    <provider>[MSSQL|MSSQL2005|ORACLE|POSTGRE]</provider>
    <server_name>[db_server_name]</server_name>
    <server_port>[db_port]</server_port>
    <database_name>[db_name]</database_name>
    <username>[db_username]</username>
    <password>[db_password]</password>
    <process_name>[db_process_name]</process_name>
    <instance_name>[mssql_instance_name]</instance_name>
    <schema_name>[postgres_schema_name]</schema_name>
    <dvk_settings>
      <service_url>http://[TURVASERVER]/cgi-bin/consumer_proxy</service_url>
      <send_documents_ver>1</send_documents_ver> <!-- Võimalikud väärtused: 1, 2 -->
      <receive_documents_ver>1</receive_documents_ver> <!-- Võimalikud väärtused: 1, 2, 3 -->
      <mark_documents_received_ver>1</mark_documents_received_ver> <!-- Võimalikud väärtused: 1, 2 -->
      <get_send_status_ver>1</get_send_status_ver> <!-- Võimalikud väärtused: 1 -->
      <get_sending_options_ver>1</get_sending_options_ver> <!-- Võimalikud väärtused: 1, 2 -->
      <default_status_id>0</default_status_id> <!-- Võimalikud väärtused: 0-11 -->
    </dvk_settings>
  </database>
</databases>