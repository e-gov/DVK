<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ABSOLUTE} %5p %c{1}:%L - %m%n"/>
    </Console>
  </Appenders> 
  <Loggers>
    <Logger name="log4j.logger.org.hibernate" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
   <Logger name="log4j.logger.net.sf.hibernate" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="log4j.logger.net.sf.hibernate.cfg" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="log4j.logger.org.hibernate.SQL" level="debug">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
     <Logger name="log4j.logger.org.hibernate.type" level="info">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
     <Logger name="log4j.logger.org.hibernate.tool.hbm2ddl" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
     <Logger name="log4j.logger.org.hibernate.cache" level="info">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
     <Logger name="log4j.logger.dvk.api" level="debug">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
     <Logger name="log4j.logger.org.exolab.castor" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="log4j.logger.org.castor.core" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="log4j.logger.org.exolab.castor" level="warn">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    <Logger name="log4j.logger.org.exolab.castor.mapping" level="error">
    	<AppenderRef ref="STDOUT"/>
    </Logger>
    
    
    <Root level="debug">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
