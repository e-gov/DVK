	<name>dvk-parent</name>

	<distributionManagement>
		<repository>
			<id>ria</id>
			<name>DVK releases</name>
			<url>https://artifactory.tt.kit/artifactory/DVK-libs-release-local</url>
		</repository>
		<snapshotRepository>
			<id>ria</id>
			<name>DVK snapshots</name>
			<url>https://artifactory.tt.kit/artifactory/DVK-libs-snapshot-local</url>
